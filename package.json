{
  "name": "task-nudge",
  "displayName": "Task Nudge",
  "description": "AI-powered developer productivity assistant with periodic check-ins, voice feedback, and Git analysis",
  "version": "1.0.2",
  "publisher": "Galionix",
  "author": {
    "name": "Galionix"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Galionix/task-nudge.git"
  },
  "bugs": {
    "url": "https://github.com/Galionix/task-nudge/issues"
  },
  "homepage": "https://github.com/Galionix/task-nudge#readme",
  "keywords": [
    "productivity",
    "developer",
    "ai",
    "assistant",
    "nudge",
    "git",
    "voice",
    "openai",
    "chatgpt",
    "workflow",
    "tracking",
    "automation",
    "reminder",
    "notification",
    "progress",
    "coaching",
    "mentoring",
    "focus",
    "time-management",
    "developer-tools",
    "code-review",
    "machine-learning",
    "text-to-speech",
    "tts",
    "collaboration",
    "team",
    "survey",
    "check-in",
    "feedback",
    "motivation",
    "health",
    "wellbeing",
    "pomodoro",
    "break-reminder",
    "activity-tracker"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "task-nudge.checkNow",
        "title": "Task Nudge: Check Now",
        "category": "Task Nudge"
      },
      {
        "command": "task-nudge.openChat",
        "title": "Open Chat",
        "icon": "$(comment-discussion)"
      }
    ],
    "views": {
      "task-nudge-sidebar": [
        {
          "id": "task-nudge-chat-view",
          "name": "AI Assistant",
          "type": "webview",
          "when": "true",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "task-nudge-sidebar",
          "title": "Task Nudge",
          "icon": "/media/icon.png"
        }
      ]
    },
    "configuration": {
      "title": "Task Nudge",
      "properties": {
        "taskNudge.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable developer pings during periods of inactivity."
        },
        "taskNudge.baseIntervalMinutes": {
          "type": "number",
          "default": 15,
          "minimum": 1,
          "description": "Base interval between pings (in minutes)."
        },
        "taskNudge.maxIntervalMinutes": {
          "type": "number",
          "default": 60,
          "minimum": 5,
          "description": "Maximum interval between pings (in minutes)."
        },
        "taskNudge.idleThresholdSeconds": {
          "type": "number",
          "default": 180,
          "minimum": 30,
          "description": "How many seconds without activity to consider idle."
        },
        "taskNudge.questions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "What task are you currently working on?",
            "How is your mood today?",
            "What is blocking or challenging you right now?",
            "What is your next planned step?",
            "Who can you reach out to for help?",
            "How much time do you estimate the current task will take?"
          ],
          "description": "List of questions to ask the developer."
        },
        "taskNudge.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for generating personalized messages."
        },
        "taskNudge.voiceEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable voice narration of messages."
        },
        "taskNudge.voiceLanguage": {
          "type": "string",
          "enum": ["ru", "en"],
          "default": "ru",
          "description": "Language for voice narration."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
